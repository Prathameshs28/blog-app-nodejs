<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head')  %>
    <title>Homepage</title>
</head>
<body>
    
    <%- include('./partials/nav')  %>

    <!-- <%= JSON.stringify(blogs) %>  -->

    <div class="d-flex m-3 justify-content-between flex-wrap p-2 bd-highlight">
    <% blogs.forEach(blog => { %>
        
        <div class=" mt-4 card bg-light" style="width: 30rem;" >
             <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="img" style="width: 30rem; height: auto;">
            <div class="card-body">
            <h5 class="card-title">Title: <%= blog.title %></h5>
            <p class="card-text">Body:<%= blog.body %> </p>
            <p class="card-text">Created At:<%= blog.createdAt %> </p>
          </div>

          <% if (locals.user) { %>
            <div class="card-footer">
                  <p class="p">
                    <form action= "/blog/<%= blog._id %>" method="get"  >
                        <button type="submit" class="btn btn-danger m-2">Delete</button>
                    </form>
                    <button type="submit" class="btn btn-warning m-2">Update</button>
                  </p>
            </div>           
          <% } %>

        </div>

        <% }) %>
    </div>

    <%- include('./partials/scripts')  %>

</body>
</html>